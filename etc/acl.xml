                            <resource id="Mageplaza_Smtp::configuration" title="Mageplaza Smtp"/>
                            <resource id="Mageplaza_Smtp::email_marketing" title="Marketing Automation"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
